/**How to calculate a^b
  a = 2
  b = 1000
  1. base case  b == 0, a ^ b = 1
  2. recursive rule 2 ^ 999 ==> 2 * 2 ^ 999 
  							2 ^ 500 ==> 2 ^ 500 * 2 ^ 500
  							F(n) = F(n/2) * F(n/2)
 **/
 public int a_pow_b (int a, int b) {
 	if ( b ==0) {
 		return 1;
 		}
 		int half_result = a_pow_b (a , b/2);
 		if ( b % 2 ==0) {
 			return half_result * half_result;
 			}
 			else {
 				return half_result * half_result * a;
 			}
//Time = O (log(b))
//Space = O (log(b)) 层数
